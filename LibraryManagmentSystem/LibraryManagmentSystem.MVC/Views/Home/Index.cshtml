@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome in Library Managment System!</h1>
</div>
@if(!User.IsInRole("Admin"))
{
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/library3.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Discover fantastic books!</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/library5.jpg" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
@if(User.IsInRole("Admin"))
{
   <nav class ="navbar bg-white">
        <ul class ="nav navbar-nav">
            <li class ="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="Index"><i class="bi bi-window"> Reservations List</i></a>
            </li>
            <li class ="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="BookingInCurrentMonth"><i class="bi bi-calendar3"> Booking in this Month</i></a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="BookingInCurrentDay"><i class="bi bi-calendar3"> Booking in Current Day</i></a>
            </li>
            <li class ="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index"><i class="bi bi-book"> Books List</i></a>
            </li>
            <li class ="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="CreateBook"><i class="bi bi-database-add"> Add New Book</i></a>
            </li>
             <li class ="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index"><i class="bi bi-person-circle"> User Managment</i></a>
            </li>
            <li class ="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Documents" asp-action="Index"><i class="bi bi-filetype-pdf">Documents Generator</i></a>
            </li>
            <li class ="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="PublishedHouses" asp-action="CreatePublishedHouse"><i class="bi bi-house-add-fill">Add New Publish House</i></a>
            </li>
        </ul>
    </nav>
}
