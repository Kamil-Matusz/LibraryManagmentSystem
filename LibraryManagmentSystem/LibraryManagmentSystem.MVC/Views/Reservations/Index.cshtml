@model IEnumerable<LibraryManagmentSystem.Application.DTO.ReservationDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservation List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusId)
            </td>
            <td>
                 <a class="btn btn-warning" asp-controller="Reservations" asp-action="EditReservationStatus" asp-route-reservationId="@item.ReservationId">Edit Status</a>
                 <a class="btn btn-info" asp-controller="Reservations" asp-action="ReservationDetails" asp-route-reservationId="@item.ReservationId">Details</a>
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
