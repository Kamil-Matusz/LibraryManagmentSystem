@model IEnumerable<LibraryManagmentSystem.Application.DTO.UserDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Users List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
             <td>
                <a class="btn btn-primary" asp-controller="Users" asp-action="UserDetails" asp-route-username="@item.UserName">Account Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
